@model Practica6.MVC.MVC.Models.EmployeesView
@{
    ViewBag.Title = "Actualizacion Empleado";
}
        <div id="updateModalContent" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Actualizar Empleado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar" onclick="closeModals()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="updateEmployeeForm">
                    <input type="hidden" id="employeeIdHidden" name="employeeIdHidden" value="@Model.EmployeeID" />
                    <div class="form-group">
                        <label for="firstName">Nombre</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" value="@Model.FirstName" pattern="[A-Za-z]+" title="Ingresa solo letras, sin espacios ni caracteres especiales" required/>
                        @Html.ValidationMessageFor(model => model.FistName)
                    </div>
                    <div class="form-group">
                        <label for="lastName">Apellido</label>
                        <input type="text" class="form-control" id="lastName" name="lastName" value="@Model.LastName" pattern="[A-Za-z]+" title="Ingresa solo letras, sin espacios ni caracteres especiales" required/>
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                    <div class="form-group">
                        <label for="title">Puesto Laboral</label>
                        <input type="text" class="form-control" id="title" name="title" value="@Model.Title" pattern="[A-Za-z]+" title="Ingresa solo letras, sin espacios ni caracteres especiales" required/>
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="closeModals()">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="updateEmployee('@Model.EmployeeID', '@Model.FirstName', '@Model.LastName', '@Model.Title')">Actualizar</button>
            </div>
        </div>

        <script>
            function updateEmployee(EmployeeID, FirstName, LastName, Title) {
              
                var formData = {
                    EmployeeID: EmployeeID,
                    FirstName: FirstName,
                    LastName: LastName,
                    Title: Title,
                }

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Update", "Employees")',
                    data: JSON.stringify(formData),
                    success: function (data) {
                        $('#employeeTableContainer').html(data);
                        Swal.fire('Éxito', 'Los datos se actualizaron correctamente', 'success');
                        closeModals();
                    },
                    error: function () {
                        Swal.fire('Error', 'Hubo un error al actualizar el registro', 'error');
                    }
                });
            }
        </script>

